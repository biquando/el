    "version": "0.2.0",
    "configurations": [
        {
            "name": "el",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/el",
            "args": ["./res/boot", "./res/fib"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build el",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "lasm",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/make",
            "args": ["test.l"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build lasm",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "test",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/make",
            "args": ["test_el"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
